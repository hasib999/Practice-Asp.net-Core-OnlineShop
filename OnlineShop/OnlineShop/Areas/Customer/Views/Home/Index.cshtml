@using OnlineShop.Models
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Products>
@{
    ViewData["Title"] = "Home Page";
}

<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>
                <img src="/@product.Image" alt="Card Image" class="card-img-top" style="height:300px;" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313;"><b>Price : @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="d-flex justify-content-center">
    <div class="pagination">
        @Html.PagedListPager(Model, c => Href("~/Customer/Home/Index?page=" + c)
         , new PagedListRenderOptions
         {
             DisplayItemSliceAndTotal = false,
             
             ContainerDivClasses = new[] { "navigation" },
             LiElementClasses = new[] { "page-item" },
             PageClasses = new[] { "page-link" },
         })
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('ul.pagination > li.disabled > a').addClass('page-link');
        });
    </script>
}