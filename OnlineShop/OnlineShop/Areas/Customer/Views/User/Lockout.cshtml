
@model OnlineShop.Models.ApplicationUser
@{
    ViewData["Title"] = "Lockout";
}
<br />
<h2 class="text-info">Lockout User</h2>
<form asp-action="Lockout" method="post" enctype="multipart/form-data" id="user-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <input asp-for="Id" value="@Model.Id" type="hidden" />
        <h4 class="text-danger">@ViewBag.message</h4>
        <h4>Do you want to lockout this User?</h4>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName"></label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FirstName"></label>
            </div>
            <div class="col-5">
                <input asp-for="FirstName" class="form-control" readonly />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LastName"></label>
            </div>
            <div class="col-5">
                <input asp-for="LastName" class="form-control" readonly />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <br />
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Lockout"/>
            &nbsp;<a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}