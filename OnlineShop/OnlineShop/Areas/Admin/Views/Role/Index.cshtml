@model IEnumerable<ApplicationUser>
@{

}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Roles</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp;New Role</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (var item in ViewBag.Roles)
        {
            <tr>
                <td>@item.Name</td>
                <td style="width:150px">
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
@section scripts{

    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    @if (TempData != null)
    {
        <script type="text/javascript">

        $(function () {
            var save = '@TempData["save"]'
            var update = '@TempData["update"]'
            var deletes = '@TempData["delete"]'
            if (save != '') {
                alertify.success(save);
            }
            if (update != '') {
                alertify.success(update);
            }
            if (deletes != '') {
                alertify.success(deletes);
            }
        })
        </script>
    }
}
