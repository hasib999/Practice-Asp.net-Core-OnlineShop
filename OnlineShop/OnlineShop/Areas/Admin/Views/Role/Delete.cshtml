@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-info">Delete Role</h2>
<form asp-action="Delete" method="post" enctype="multipart/form-data" id="role-form">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h4 class="text-danger">@ViewBag.message</h4>
        <h4>Do You Want to Delete?</h4>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <input type="hidden" value="@ViewBag.id" name="id" />
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.name" class="form-control" readonly/>
            </div>
            <br />
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary" value="Delete" />
            &nbsp;<a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#role-form").validate({
                rules: {
                    name: {
                        required: true,
                    },
                },
                messages: {
                    name: "Enter Role Name!",
                }
            });
        });
    </script>
}
